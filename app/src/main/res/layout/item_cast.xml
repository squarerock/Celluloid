<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#EEEEEE"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="144dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/cast_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/cast_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/movie_fallback" />
            </LinearLayout>

            <TextView
                android:id="@+id/cast_movie_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cast_layout"
                android:layout_centerHorizontal="true"
                android:text="Pranav"/>

            <TextView
                android:id="@+id/cast_original_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#AAAAAA"
                android:layout_below="@id/cast_movie_name"
                android:layout_centerHorizontal="true"
                android:text="Pandu"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>